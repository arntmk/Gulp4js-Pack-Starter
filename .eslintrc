{
	"extends": ["eslint:recommended", "airbnb-base"],
	// "parser": "@typescript-eslint/parser",
	// "parserOptions": { "project": ["./tsconfig.json"] },
	// "plugins": ["@typescript-eslint"],
	// "root": true,
	"env": {
		"browser": true,
		"commonjs": true
		// "es6": true
		// "node": true
		// "jquery": true
	},
	"ignorePatterns": [
		"**/.vscode/**",
		"**/.idea/**",
		"**/dist/**",
		"**/dest/**",
		"**/app/**",
		"**/node_modules/**",
		"**/tests/**",
		"**/vendor/**",
		"**/libs/**",
		"**/build/**",
		"*.css",
		"*.scss",
		"*.sass",
		"*.less",
		"*.postcss",
		"*.min.js"
	],
	"rules": {
		"no-unused-vars": "off",
		"no-console": "warn",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "warn", // "autofix"
		"class-methods-use-this": "warn", // "no-autofix"

		"no-restricted-syntax": "warn",
		"global-require": "warn",
		"no-undef": "off",
		"no-mixed-operators": "off",

		// Formatter | Prettier
		"max-len": ["off", { "code": 120, "comments": 120 }],
		"semi": ["warn", "always"],
		"quotes": ["warn", "single"],
		"indent": ["off", "tab"],
		"no-tabs": ["off", { "allowIndentationTabs": true }],
		"no-trailing-spaces": "off",
		"no-mixed-spaces-and-tabs": "off",
		"object-curly-newline": "off",

		"implicit-arrow-linebreak": ["warn", "below"],
		"function-paren-newline": ["off", "multiline-arguments"],
		"operator-linebreak": ["warn", "after"],
		"wrap-iife": ["error", "any"]
	}
}
