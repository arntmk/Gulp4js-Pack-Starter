{
	"jsxSingleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"endOfLine": "lf",
	"printWidth": 100,
	"bracketSameLine": false,
	"bracketSpacing": true,
	"useTabs": true,
	"tabWidth": 2,
	"arrowParens": "always",
	"singleQuote": true,
	"overrides": [
		{
			"files": ["*.css", "*.scss", "*.less", "*.postcss"],
			"options": { "singleQuote": false }
		},
		{
			"files": ["*.html", "*.twig", "*.njk"],
			"options": { "singleQuote": false, "printWidth": 480 }
		},
		{
			"files": ["*.php", "*.jsx", "*.tsx"],
			"options": { "useTabs": false, "printWidth": 480 }
		},
		{
			"files": ["**/dist/**", "**/dest/**", "**/app/**", "**/build/**"],
			"options": { "useTabs": false }
		}
	],
	"ignorePath": ["**/node_modules/**", "**/libs/**", "**/vendor/**", "*.min.js", "*.min.css"],
	"htmlWhitespaceSensitivity": "css",
	"twigPrintWidth": 80,
	"allowUnknownTags": true,
	"twigMultiTags": [
		"with,endwith",
		"nav,endnav",
		"switch,case,default,endswitch",
		"ifchildren,endifchildren",
		"cache,endcache"
	]
}
