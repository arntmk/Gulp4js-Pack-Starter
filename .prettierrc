{
	"jsxSingleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"endOfLine": "lf",
	"printWidth": 100,
	"twigPrintWidth": 100,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"useTabs": true,
	"tabWidth": 2,
	"arrowParens": "always",
	"singleQuote": true,
	"overrides": [
		{
			"files": ["*.css", "*.scss", "*.sass", "*.less", "*.postcss"],
			"options": { "singleQuote": false }
		},
		{
			"files": ["*.html", "*.twig"],
			"options": { "singleQuote": false }
		}
	],
	"ignorePath": [
		"**/node_modules/**",
		"**/dist/**",
		"**/dest/**",
		"**/app/**",
		"**/build/**",
		"**/public/**",
		"**/libs/**",
		"**/vendor/**",
		"*.min.js",
		"*.min.css"
	]
}
