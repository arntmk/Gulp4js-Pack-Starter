{
	"jsxSingleQuote": true,
	"singleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"endOfLine": "lf",
	"printWidth": 100,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"useTabs": true,
	"tabWidth": 2,
	"arrowParens": "always",
	"overrides": [
		{
			"files": ["**/*.css", "**/*.scss", "**/*.sass", "**/*.less", "**/*.postcss", "**/*.html"],
			"options": { "singleQuote": false }
		}
	]
}
