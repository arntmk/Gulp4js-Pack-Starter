/* cSpell:disable */
{
	/* ____________________________________________ */
	// Config
	// "stylelint.configFile": "./.vscode/.stylelintrc",
	// "prettier.configPath": "./.vscode/.prettierrc",
	// "prettier.ignorePath": "./.vscode/.prettierignore",

	/* ____________________________________________ */
	// "files.autoSave": "afterDelay", // afterDelay, onWindowChange
	"extensions.ignoreRecommendations": false,
	"files.exclude": {
		"**/.vscode": false,
		"**/node_modules": true,
		"**/.eslintrc": true,
		"**/.stylelintrc": true,
		"**/.editorconfig": true,
		"**/.gitignore": true,
		"**/.htmlhintrc": true,
		"**/.prettierrc": true,
		"**/.prettierignore": true,
		"**/jsconfig.json": true,
		"**/package-lock.json": true,
		"**/README.md": true,
		"**/fiveserver.config.cjs": true
	},

	// Stylelint || default linter
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	// Eslint || default linter
	"php.validate.enable": false,
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,

	/* ____________________________________________ */
	// Npm
	"npm.packageManager": "npm",
	"npm.scriptExplorerAction": "run",

	/* ____________________________________________ */
	// Emmet
	"emmet.excludeLanguages": [],
	"emmet.includeLanguages": {
		"postcss": "css",
		"plaintext": "pug",
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"php": "html",
		"blade": "html",
		"twig": "html",
		"njk": "html"
	},

	/* ____________________________________________ */
	// Files Associations
	"files.associations": {
		"*.html": "html",
		"*.twig": "twig",
		"*.njk": "njk",
		"*.module": "php"
	},

	/* ____________________________________________ */
	// .twig || Extension
	"[twig]": {
		"editor.defaultFormatter": "junstyle.twig-language",
		"editor.quickSuggestions": {
			"other": "on",
			"comments": "off",
			"strings": "on"
		}
	},

	/* ____________________________________________ */
	// nunjucks(.njk) || Extension
	"vsicons.associations.files": [{ "icon": "nunjucks", "extensions": ["njk"], "format": "svg" }],
	"[njk]": {
		"editor.defaultFormatter": "junstyle.twig-language",
		"editor.quickSuggestions": {
			"other": "on",
			"comments": "off",
			"strings": "on"
		}
	},

	/* ______________________________________________________ */
	/* ____________________Extensions________________________ */
	/* ______________________________________________________ */
	// Prettier
	"prettier.requireConfig": false,

	// BemHelper
	"bemHelper.showDepthWarnings": false, // "true" low fps

	// Eslint
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],

	// Stylelint
	"stylelint.validate": ["css", "scss", "less", "postcss"],
	"stylelint.snippet": ["css", "scss", "less", "postcss"],

	// Htmlhint "shift+alt+s"
	"htmlhint.documentSelector": ["html", "htm", "twig", "njk"],
	"attrsSorter.order": [
		"class",
		"className",
		"id",
		"name",
		"type",
		"role",
		"href",
		"src",
		"alt",
		"data-.+",
		"ng-.+",
		"for",
		"htmlFor",
		"value",
		"title",
		"aria-.+",
		"$unknown$"
	]

	/* ____________________________________________ */
	// SCSS Everywhere-fork || Class Suggestions
	/*
	"html-css-class-completion.remoteStyleSheets": [
		"https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css"
		"https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
		"https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
	],
	*/
}
