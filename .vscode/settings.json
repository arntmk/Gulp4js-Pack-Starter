/* cSpell:disable */
{
	// "files.autoSave": "onWindowChange",
	"extensions.ignoreRecommendations": false,
	"files.exclude": {
		"**/.vscode": false,
		"**/node_modules": true,
		"**/.eslintrc": true,
		"**/.stylelintrc": true,
		"**/.editorconfig": true,
		"**/.gitignore": true,
		"**/.htmlhintrc": true,
		"**/.prettierrc": true,
		"**/.prettierignore": true,
		"**/jsconfig.json": true,
		"**/package-lock.json": true,
		"**/README.md": true
	},

	// Stylelint
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	// Eslint
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,

	/* ____________________________________________ */
	"npm.packageManager": "npm",
	"npm.scriptExplorerAction": "run",

	/* ____________________________________________ */
	// Emmet
	"emmet.excludeLanguages": [],
	"emmet.includeLanguages": {
		"postcss": "css",
		"plaintext": "pug",
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"vue-html": "html",
		"php": "html",
		"blade": "html",
		"markdown": "html",
		// "twig": "html",
		"hbs": "html",
		"njk": "html"
	},

	/* ____________________________________________ */
	// Files Associations
	"files.associations": {
		"*.html": "html",
		"*.twig": "twig",
		"*.hbs": "hbs",
		"*.njk": "njk"
	},

	"[twig]": {
		"editor.defaultFormatter": "junstyle.twig-language",
		"editor.quickSuggestions": {
			"other": "on",
			"comments": "off",
			"strings": "on"
		}
	},

	/* ____________________________________________ */
	/* ____________________________________________ */
	/* ____________________________________________ */
	// Config
	// "stylelint.configFile": "./.vscode/.stylelintrc",
	// "prettier.configPath": "./.vscode/.prettierrc",
	// "prettier.ignorePath": "./.vscode/.prettierignore",

	/* ______________________________________________________ */
	/* ____________________Extensions________________________ */
	/* ______________________________________________________ */
	// Prettier
	"prettier.requireConfig": false,

	// BemHelper
	"bemHelper.showDepthWarnings": false, // "true" low fps

	// Eslint
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],

	// Stylelint
	"stylelint.validate": ["css", "scss", "less", "postcss"],
	"stylelint.snippet": ["css", "scss", "less", "postcss"],

	// Htmlhint "shift+alt+s"
	"htmlhint.documentSelector": ["html", "htm", "blade", "twig", "hbs", "njk"],
	"attrsSorter.order": [
		"class",
		"className",
		"id",
		"name",
		"type",
		"role",
		"href",
		"src",
		"alt",
		"data-.+",
		"ng-.+",
		"for",
		"htmlFor",
		"value",
		"title",
		"aria-.+",
		"$unknown$"
	]

	/* ____________________________________________ */
	// SCSS Everywhere-fork || Class Suggestions
	/* 	"html-css-class-completion.remoteStyleSheets": [
		"https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
	], */
}
