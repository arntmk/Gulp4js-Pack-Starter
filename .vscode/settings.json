{
	"extensions.ignoreRecommendations": false,
	// "files.autoSave": "onWindowChange",
	"files.exclude": {
		"**/node_modules": true
	},

	// Stylelint
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	// Eslint
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,

	/* ____________________________________________ */
	"npm.packageManager": "npm",
	"npm.scriptExplorerAction": "run",

	/* ____________________________________________ */
	// Emmet
	"emmet.excludeLanguages": [],
	"emmet.includeLanguages": {
		"postcss": "css",
		"plaintext": "pug",
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"vue-html": "html",
		"php": "html",
		"markdown": "html",
		"blade": "html",
		// "twig": "html",
		"hbs": "html",
		"njk": "html"
	},

	/* ____________________________________________ */
	// Files Associations
	"files.associations": {
		"*.html": "html",
		"*.twig": "twig",
		"*.hbs": "hbs",
		"*.njk": "njk"
	},

	"[twig]": {
		"editor.defaultFormatter": "junstyle.twig-language",
		"editor.quickSuggestions": {
			"other": "on",
			"comments": "off",
			"strings": "on"
		}
	},

	/* ______________________________________________________ */
	/* ____________________Extensions________________________ */
	/* ______________________________________________________ */
	// BemHelper
	"bemHelper.showDepthWarnings": false, // "true" low fps

	// HTML CSS Support
	"css.styleSheets": [
		// "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
		"http://localhost:3015/styles/style.min.css",
		"style.css",
		"style.min.css",
		"./styles/style.css",
		"./styles/style.min.css",
		"./../styles/style.css",
		"./../styles/style.min.css",
		"${fileBasenameNoExtension}.css",
		"${fileBasenameNoExtension}.scss"
	],

	// Eslint
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],

	// Stylelint
	"stylelint.validate": ["css", "scss", "less"],
	"stylelint.snippet": ["css", "scss", "less"],

	// Htmlhint "shift+alt+s"
	"htmlhint.documentSelector": ["html", "htm", "php", "blade", "twig", "hbs", "njk"],
	"attrsSorter.order": [
		"class",
		"className",
		"id",
		"name",
		"type",
		"role",
		"href",
		"src",
		"alt",
		"data-.+",
		"ng-.+",
		"for",
		"htmlFor",
		"value",
		"title",
		"aria-.+",
		"$unknown$"
	],
	// "stylelint.configFile": "./.vscode/.stylelintrc",
	// "prettier.configPath": "./.vscode/.prettierrc",
	"prettier.ignorePath": "./.vscode/.prettierignore"
}
