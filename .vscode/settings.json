{
	// "files.autoSave": "onWindowChange",
	"files.exclude": {
		"**/node_modules": true
	},
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,

	/* ____________________Extensions________________________ */

	// Live Preview
	"livePreview.defaultPreviewPath": "./build/index.html-",

	// HTML CSS Support
	"css.styleSheets": [
		// "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css",
		"http://localhost:3015/css/style.min.css",
		"./css/style.css",
		"./css/style.min.css",
		"style.css",
		"style.min.css",
		"${fileBasenameNoExtension}.css"
	],

	// Eslint
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
	"[javascript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
	"[typescript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
	"[javascriptreact]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
	"[typescriptreact]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },

	// Stylelint
	"stylelint.validate": ["css", "scss", "less"],
	// "[css]": { "editor.defaultFormatter": "stylelint.vscode-stylelint" },
	"[scss]": { "editor.defaultFormatter": "stylelint.vscode-stylelint" },
	"[less]": { "editor.defaultFormatter": "stylelint.vscode-stylelint" },

	// Htmlhint "shift+alt+s"
	"htmlhint.documentSelector": ["html", "htm"],
	"htmlhint.options": {
		"doctype-first": false,
		"src-not-empty": true,
		"attr-sorted": true
	},

	"attrsSorter.order": [
		"class",
		"id",
		"name",
		"data-.+",
		"ng-.+",
		"src",
		"for",
		"type",
		"href",
		"value",
		"title",
		"alt",
		"role",
		"aria-.+",
		"$unknown$"
	],

	// Path Autocomplete Excluded
	"path-autocomplete.excludedItems": {
		"**": {
			"when": "**/*.html",
			"context": "(src|href)=.*"
		}
	}
}
